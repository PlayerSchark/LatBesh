<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<!-- by Player_Schark -->
<VBox alignment="CENTER" prefHeight="150.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.schark.latbesh.LatBeshController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <GridPane alignment="CENTER" prefHeight="81.0" prefWidth="336.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="220.0" minWidth="10.0" prefWidth="220.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="245.0" minWidth="5.0" prefWidth="32.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="80.0" minWidth="29.0" prefWidth="78.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <TextField id="latin" fx:id="aureText"/>
        <TextField id="aure" fx:id="latText" GridPane.rowIndex="1"/>
        <Button id="translateLatin" mnemonicParsing="false" onAction="#onLatClick" prefWidth="80.0" text="zu Latein" GridPane.columnIndex="2"/>
        <Button id="translateAurek" onAction="#onAureClick" prefWidth="80.0" text="zu Aure" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    </GridPane>
</VBox>
